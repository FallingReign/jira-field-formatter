{
  "name": "jira-field-formatter",
  "version": "1.2.0",
  "description": "A standalone Node.js library for formatting field values to be compatible with the Jira REST API",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.cjs"
    }
  },
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "build": "node scripts/build.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "prepublishOnly": "npm run test && npm run build",
    "example": "node examples/basic-usage.js"
  },
  "keywords": [
    "jira",
    "api",
    "formatter",
    "field",
    "atlassian",
    "rest",
    "json"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/jira-field-formatter.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/jira-field-formatter/issues"
  },
  "homepage": "https://github.com/your-username/jira-field-formatter#readme",
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
