{
  "testEnvironment": "node",
  "transform": {},
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "testPathIgnorePatterns": ["/node_modules/"] ,
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/services/**",
    "!src/domain/**",
    "!src/**/*.test.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "verbose": true
}
